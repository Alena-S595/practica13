# Импортируем все компоненты из библиотеки tkinter
from tkinter import *

# Функция-обработчик для отображения введенного текста
def display_text():
    # Получаем текст из поля ввода
    text = entry.get()
    # Устанавливаем полученный текст в метку для вывода
    output_label.config(text=text)

# Создаем главное окно приложения
root = Tk()
# Устанавливаем заголовок окна
root.title("Ввод текста")

# Создаем поле для ввода текста шириной 40 символов
entry = Entry(root, width=40)
# Размещаем поле ввода с отступами по вертикали (pady=10)
entry.pack(pady=10)

# Создаем кнопку с текстом "Показать текст"
button = Button(root, text="Показать текст", 
               # Привязываем функцию display_text к нажатию кнопки
               command=display_text)
# Размещаем кнопку с отступами
button.pack(pady=10)

# Создаем метку для вывода текста (изначально пустую)
output_label = Label(root, text="")
# Размещаем метку с отступами
output_label.pack(pady=10)

# Запускаем главный цикл обработки событий приложения
root.mainloop()

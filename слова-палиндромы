# Импорт библиотеки tkinter под псевдонимом tk для создания GUI
import tkinter as tk
# Импорт модуля messagebox из tkinter для отображения всплывающих окон
from tkinter import messagebox

# Функция для проверки слов на палиндромы
def check_palindromes():
    # Получение первого слова из поля ввода и приведение к нижнему регистру
    word1 = entry1.get().lower()
    # Получение второго слова из поля ввода и приведение к нижнему регистру
    word2 = entry2.get().lower()

    # Проверка, являются ли оба слова палиндромами (читаются одинаково в обе стороны)
    if word1 == word1[::-1] and word2 == word2[::-1]:
        # Если оба слова палиндромы - показываем соответствующее сообщение
        messagebox.showinfo("Результат", "Оба слова являются палиндромами!")
    # Проверка, является ли только первое слово палиндромом
    elif word1 == word1[::-1]:
        # Показываем сообщение о первом слове
        messagebox.showinfo("Результат", f"Только первое слово '{word1}' является палиндромом.")
    # Проверка, является ли только второе слово палиндромом
    elif word2 == word2[::-1]:
        # Показываем сообщение о втором слове
        messagebox.showinfo("Результат", f"Только второе слово '{word2}' является палиндромом.")
    # Если ни одно слово не палиндром
    else:
        # Показываем соответствующее сообщение
        messagebox.showinfo("Результат", "Ни одно из слов не является палиндромом.")

# Создание главного окна приложения
root = tk.Tk()
# Установка заголовка окна
root.title("Сравнение палиндромов")

# Создание и размещение элементов интерфейса:

# Метка для первого поля ввода
label1 = tk.Label(root, text="Введите первое слово:")
# Размещение метки с отступом 5 пикселей сверху и снизу
label1.pack(pady=5)

# Поле ввода для первого слова
entry1 = tk.Entry(root)
# Размещение поля ввода с отступом 5 пикселей сверху и снизу
entry1.pack(pady=5)

# Метка для второго поля ввода
label2 = tk.Label(root, text="Введите второе слово:")
# Размещение метки с отступом 5 пикселей сверху и снизу
label2.pack(pady=5)

# Поле ввода для второго слова
entry2 = tk.Entry(root)
# Размещение поля ввода с отступом 5 пикселей сверху и снизу
entry2.pack(pady=5)

# Кнопка для проверки слов
check_button = tk.Button(root, text="Проверить", command=check_palindromes)
# Размещение кнопки с увеличенным отступом (20 пикселей сверху и снизу)
check_button.pack(pady=20)

# Запуск главного цикла обработки событий tkinter
root.mainloop()

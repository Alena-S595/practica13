# Импорт всех компонентов из библиотеки tkinter для создания GUI
from tkinter import *
# Импорт модуля random для генерации случайных чисел
import random

# Функция для проверки введенного пользователем числа
def check_guess():
    try:
        # Получаем значение из поля ввода и преобразуем в целое число
        guess = int(entry.get())
        
        # Проверяем, совпадает ли число с загаданным
        if guess == number:
            result_label.config(text="Поздравляю! Вы угадали!")
        # Проверяем, меньше ли введенное число
        elif guess < number:
            result_label.config(text="Загаданное число больше.")
        # Если не совпадает и не меньше - значит больше
        else:
            result_label.config(text="Загаданное число меньше.")
    except ValueError:
        # Обрабатываем ошибку, если введено не число
        result_label.config(text="Ошибка: введите число")

# Генерируем случайное число от 1 до 100, которое нужно угадать
number = random.randint(1, 100)

# Создаем главное окно приложения
root = Tk()
# Устанавливаем заголовок окна
root.title("Угадай число")

# Создаем и размещаем текстовую метку с инструкцией
# pack(pady=10) - добавляет отступ 10 пикселей сверху и снизу
Label(root, text="Угадайте число от 1 до 100").pack(pady=10)

# Создаем и размещаем метку "Введите число:"
# pady=(10, 0) - отступ 10 пикселей сверху и 0 снизу
Label(root, text="Введите число:").pack(pady=(10, 0))

# Создаем поле для ввода числа (ширина 20 символов)
entry = Entry(root, width=20)
# Размещаем поле с отступом 0 сверху и 10 снизу
entry.pack(pady=(0, 10))

# Создаем кнопку "Проверить", при нажатии вызывается функция check_guess
button = Button(root, text="Проверить", command=check_guess)
# Размещаем кнопку с отступом 10 пикселей сверху и снизу
button.pack(pady=10)

# Создаем метку для вывода результата (изначально пустую)
result_label = Label(root, text="")
# Размещаем метку с отступом 10 пикселей сверху и снизу
result_label.pack(pady=10)

# Запускаем главный цикл обработки событий tkinter
root.mainloop()

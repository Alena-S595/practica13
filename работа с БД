]

# Вставляем данные в таблицу
cursor.executemany('''
INSERT INTO Сотрудники (табельный_номер, фамилия, дата_рождения, код_специальности, код_подразделения, дата_приема, дата_начала_работы, оклад, образование, код_должности)
VALUES (?, ?, ?, ?, ?, ?, ?, ?, ?, ?)
''', data)

# Сохраняем изменения
connection.commit()

# Создаем графический интерфейс
root = Tk()
t = Text(root, width=80, height=20)
t.pack()

# Получаем данные из таблицы и выводим их в Text
cursor.execute("SELECT * FROM Сотрудники")
rows = cursor.fetchall()
for row in rows:
    t.insert(END, str(row) + '\n')  # Вставляем данные в виджет Text

# Закрываем соединение с базой данных
connection.close()

# Запускаем главный цикл обработки событий
root.mainloop()

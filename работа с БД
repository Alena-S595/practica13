from tkinter import *
import sqlite3

# Создаем подключение к бд
connection = sqlite3.connect("учет_кадров.db")
cursor = connection.cursor()

# Создаем таблицу
cursor.execute('''
CREATE TABLE IF NOT EXISTS Сотрудники (
табельный_номер INTEGER PRIMARY KEY,
фамилия VARCHAR(20),
дата_рождения DATE,
код_специальности VARCHAR(10),
код_подразделения VARCHAR(10),
дата_приема DATE,
дата_начала_работы DATE,
оклад DECIMAL(10, 2),
образование VARCHAR(50),
код_должности VARCHAR(10)
)
''')

